<%- include("partials/header") %>

<main class="container py-4">

    <h1 class="text-center m-2"><%= quiz.title %></h1>
  
    <h2 class="text-center m-2"><%= quiz.description %></h1>
  
    <h2 class="small text-end">Par <%= quiz.author.firstname %> <%= quiz.author.lastname %></h2>
  
    <h2 class="small text-end">Date de création : <%= new Date(quiz.created_at).toLocaleDateString('fr-FR') %></h2>
  
    <h3>Thèmes</h3>
    <ul class="mb-4 p-0">
        <% for (let tag of quiz.tags) { %>
            <li class="badge bg-primary"><%= tag.name %></li>
        <% } %>
    </ul>
  
    <h3>Questions</h3>
  
    <% for (let question of quiz.questions) { %>
      <span class="badge bg-info"><%= question.level.name %></span>
      <p class="fw-bold mb-1"><%= question.description %></p>
      <div class="mb-3 ms-2">
        <% for (let prop of question.propositions) { %>
            <div>
                <input type="radio" id="response-<%= prop.id %>" name="question-<%= question.id %>" value="<%= prop.id %>">
                <label for="response-<%= prop.id %>"><%= prop.description %></label>
            </div>
        <% } %>
      </div>
      <p class="fst-italic text-secondary"><%= question.anecdote %></p>
    <% } %>
    
    <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>
  </main>
  

<%- include("partials/footer") %>
  